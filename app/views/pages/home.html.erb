<% provide :title, t('pages.home.title') %>
<% if user_signed_in? %>
  <% content_for :btn_new_schedule do %>
    <%= link_to_if(can?(:create, Schedule), t('pages.home.create_event'), new_schedule_path, class: "btn btn-primary"){} %>
  <% end %>
  <%= render 'shared/filter_room' %>
  <%= render "shared/other_option" %>
<% end %>

<% content_for :mini_calendar do %>
  <% if user_signed_in? %>
    <div class="containers">
      <div id='mini-calendar'></div>
    </div>

    <div id="my_calendar">
      <div class="title">
        <span class="glyphicon glyphicon-chevron-down"></span>
        <%= t("pages.home.my_calendar") %>
      </div>

      <div class="slide_down" id="my_schedules"></div>
    </div>

    <div id="shared_calendar">
      <div class="title">
        <span class="glyphicon glyphicon-chevron-down"></span>
        <%= t("pages.home.shared_calendar") %>
      </div>

      <div class="slide_down" id="shared_schedules"></div>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <div id='calendar'></div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t('pages.home.welcome_framgia') %></h1>
    <%= link_to t('pages.home.sign_up_now'), new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

<% content_for :modal_form do %>
  <%= render 'shared/modal_form' if current_user %>
<% end %>

<div class="form-popover hidden"><%= render "popover" %></div>

