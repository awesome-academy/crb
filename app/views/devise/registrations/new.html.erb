<% provide :title, t("pages.home.sign_up") %>
<h1 class="col-md-6 col-md-offset-3"><%= t("pages.home.sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <br/>
      <p>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </p>
      <p>
        <%= f.label :password %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> <%= t("pages.form.characters_minimum") %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </p>
      <p>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </p>
      <br/>
      <%= f.submit t("button.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
