<%= form_for @schedule do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col-md-12 well">
    <div class="col-md-12">
      <%= f.label "Event name" %>
      <%= f.text_field :title, placeholder: "Event's title...", class: 'form-control' %>
    </div>
    <div class="col-md-12 select-date">
      <div class="col-md-5 start-date" >
        <%= f.label :start_time %>
        <div class='input-group date' id="start-time">
          <%= f.text_field :start_time, class: 'form-control', readonly: true, placeholder: "Start time"  %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-remove"></span>
          </span>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-5 finish-date">
        <%= f.label :finish_time %>
        <div class="input-group date" id="finish-time">
          <%= f.text_field :finish_time, class: 'form-control', readonly: true, placeholder: "Finish time" %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-remove"></span>
          </span>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <%= f.label "Room" %><br/>
      <%= f.select :room_id, Room.all.collect{|s| [s.name, s.id]}, {}, {class: 'select-room form-control'} %>
    </div>

    <div class="col-md-12">
      <%= f.label "Members" %><br/>
      <%= f.select :member_ids, User.all.collect{|s| [s.name, s.id]}, {}, {class: 'select-members form-control', multiple: :multiple} %>
    </div>

    <div class="col-md-12">
      <%= f.label "Description" %>
    <%= f.text_area :description, placeholder: "Compose description...", class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-12 well">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to "Back", :back, class: "btn btn-primary"  %>
  </div>
<% end %>
