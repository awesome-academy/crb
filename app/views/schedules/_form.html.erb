<%= form_for @schedule do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col-md-12 well">
    <div class="col-md-12">
      <%= f.label "Event name" %>
      <%= f.text_field :title, placeholder: "Event's title...", class: 'form-control' %>
    </div>
    <div class="col-md-12">
      <%= f.label :start_time %>
      <%= f.text_field :start_time, class: 'form-control datepicker' %>
    </div>
    <div class="col-md-12">
      <%= f.label :finish_time %>
      <%= f.text_field :finish_time, class: 'form-control datepicker' %>
    </div>
    <div class="col-md-12">
      <%= f.label "Room" %><br/>
      <%= f.select :room_id, Room.all.collect{|s| [s.name, s.id]}, class: 'select2 form-control' %>
    </div>
    <div class="col-md-12">
      <%= f.label "Description" %>
    <%= f.text_area :description, placeholder: "Compose description...", class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-12 well">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
