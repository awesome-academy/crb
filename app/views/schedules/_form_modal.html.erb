<%= form_for @schedule, remote: true do |f| %>
  <div class="col-md-12 well">
    <div id="error_message"></div>
    <div class="col-md-12">
      <br/>
      <%= f.label t("schedules.form.event_name") %>
      <%= f.text_field :title, placeholder: t("schedules.form.event_title"), class: "form-control" %>
    </div>

    <div class="col-md-12 select-date">
      <div class="col-md-5 start-date" >
        <%= f.label t("schedules.form.start_time") %>
        <div class="input-group date">
          <%= f.text_field :start_time, placeholder: t("schedules.form.start_time"),
            style: "width: 195px" %>
        </div>
      </div>
      <div class="col-md-5 col-md-offset-2 finish-date">
        <%= f.label t("schedules.form.finish_time") %>
        <div class="input-group date">
          <%= f.text_field :finish_time, placeholder: t("schedules.form.finish_time"),
            style: "width: 195px" %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <%= f.label t("schedules.form.repeat") %><br/>
      <% Settings.repeat_types.each do |key, value| %>
        <div class="col-md-2"><%= label_tag value %></div>
        <div class="col-md-2"><%= check_box_tag :repeat, key %></div>
      <% end %>
    </div>

    <div class="col-md-12">
      <%= f.label t("schedules.form.room") %><br/>
      <%= f.select :room_id, Room.all.collect{|s| [s.name, s.id]}, {},
        {class: "select-room form-control"} %>
    </div>

    <div class="col-md-12">
      <br/>
      <%= f.label t("schedules.form.members") %><br/>
      <%= f.select :member_ids, User.all.collect{|s| [s.name, s.id]}, {},
        {class: "select-members form-control", multiple: :multiple} %>
    </div>

    <div class="col-md-12">
     <br/>
      <%= f.label t("schedules.form.announced_before"), class: "left-label" %>
      <%= f.select :announced_before, Settings.announced_before.to_a, {}, class: "room-selector form-control" %>
    </div>

    <div class="col-md-12">
      <br/>
      <%= f.label t("schedules.form.description") %>
      <%= f.text_area :description, placeholder: t("schedules.form.compose_description"),
        class: "form-control" %>
    </div>
  </div>
  <div class="col-md-12 well">
    <%= f.submit t("schedules.form.submit"), class: "btn btn-primary submit-button" %>
  </div>
<% end %>
