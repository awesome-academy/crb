<header class="navbar navbar-fixed-top row">
  <div class="child-header" data-no-turbolink="true">
    <%= link_to "Room Book System", root_path, id: "logo" %>
    <% if user_signed_in? %>
      <div class="search-box"><%= render "shared/search_box" %></div>
    <% end %>
    <label class="loading hidden"><%= t("header.loading") %></label>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li class="dropdown" id="h-dropdown" >
          <a href="#" id="name" class="dropdown-toggle" data-toggle="dropdown" >
            <%= current_user.name %>
            <span id="avatar">
              <img alt="avatar" src= "<%= current_user.avatar %>" width= "35" height= "35" />
            </span>
          </a>
          <ul class="dropdown-menu" id="dropdown-header">
            <% if current_user.admin? %>
              <li><%= link_to t("button.admin"), rails_admin_path %></li>
            <% end %>
            <li><%= link_to t("button.settings"), edit_user_registration_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("button.logout"), destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("button.login"), new_user_session_path %></li>
      <% end %>
      </ul>
    </nav>
  </div>
  <div class="gb_v"></div>
  <div class="gb_u"></div>
</header>
