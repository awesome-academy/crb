<%= form_for :search_form, url: {controller: "schedules", action: "index"}, method: :GET do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="input-group" id="adv-search">
        <%= f.text_field :title_cont, class: "form-control text-medium-field", placeholder: t("placeholder.search_schedules") %>
        <div class="input-group-btn">
          <div class="btn-group" role="group">
            <div>
              <button type="button" class="btn btn-default dropdown-toggle medium-field" id="btn-setting">
                <span class="caret"></span>
              </button>
              <div class="dropdown-menu dropdown-menu-right" role="menu"></div>
            </div>
            <%= f.submit t("button.search"), class: "btn btn-primary medium-field btn-search" %>
          </div>
        </div>

        <div id="search-setting" class="col-md-12">
          <div class="search_filter_room">
            <span>
              <%= f.label :room %>
            </span>
            <span>
              <%= f.select :room_id, Room.all.collect {|r| [r.name, r.id]},
                include_blank: t("dropdown.all_room"), class: "form-control small-field" %>
            </span>
          </div>
          <div class="row">
            <div class="lb_date"><%= f.label :date %></div>
            <div class="col-md-5">
              <%= f.text_field :start_date, class: "datepicker form-control small-field",
                placeholder: t("placeholder.start_date"), id: "start_date" %>
            </div>
            <div class="col-md-1 form-to">
              <%= f.label t("pages.form.to") %>
            </div>
            <div class="col-md-5 finish-date">
              <%= f.text_field :end_date, class: "datepicker form-control small-field",
                placeholder: t("placeholder.end_date"), id: "end_date" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="alert alert-warning search-warning"><%= t "flash.warning" %></div>
